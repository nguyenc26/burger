<div class="container">

    <div class="jumbotron" style="text-align: center">
        <img src="https://www.jing.fm/clipimg/full/216-2168401_cute-food-gif-transparent-clipart-png-download-hamburger.png"
            style="height: 350px; width: 250px">
        <h1>Eat da Burger!</h1>
    </div>
    <br>

    <div class="row">

        <div class="col-md-6">
            <h2>Want to eat the burger?</h2>
            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                <p>{{id}}. {{burger_name}}
                    <span><button class="change-devour" data-id="{{id}}" data-newdevour=true>
                            {{#if devoured}}devoured!{{else}}devour me!{{/if}}
                        </button></span>
                </p>
                {{/unless}}
                {{/each}}
            </ul>
        </div>

        <div class="col-md-6">
            <h2>Burgers Devoured</h2>
            <ul>
                {{#each burgers}}
                {{#if devoured}}
                <p>{{id}}. {{burger_name}}</p>
                {{/if}}
                {{/each}}
            </ul>

        </div>
    </div>

    <div>
        <h2>Add a burger</h2>
        <form class="create-form">

            <div class="form-group">
                <label>New Burger:</label>
                <input type="text" id="newburger" name="burger">
            </div>
            <button type="submit">Add Burger</button>
        </form>
    </div>

</div>